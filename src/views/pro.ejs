<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

    <% products.forEach(product=> { %>

      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.desc %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td><img src="<%= product.img %>" alt="<%= product.name %>"></td>

        <td><a href="/update/<%= product.id %>" class="Ubtn">Update</a></td>
        
        <td><button href="/delete/<%= product.id %>" onclick="deletePro('<%= product.id %>')">Delete</button></td>

      </tr>

      <% }) %>
  </tbody>
</table>