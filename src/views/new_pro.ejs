
<form action="/" method="post" enctype="multipart/form-data">
    <div class="new">
        <p>Name of Book</p>
        <input type="text" name ="name" placeholder="Enter Book Name" >

        <p>Description of Book</p>
        <input type="text" name='desc'  placeholder="Description For Book" >

        <p>Price of Book</p>
        <input type="number" name="price" placeholder="Enter Book Price" >

        <p>Enter Img URL of book</p>
        <!-- <input type="url" name="img" placeholder="Enter Book Img URL"> -->
        <input type="file" name="img" id="imageUrl" accept="images/*">

        <br /><br /><br />
        <button type="submit">Add New Book</button>

    </div>
</form>